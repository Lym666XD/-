<view class="out-view">
  <image class="background" src="/img/ground3.png" mode="widthFix"/>
  <view class="main-title">
    <text class="title-text">
      功能
    </text>
  </view>
  <view class="main-list" >
    <view class="list-item">
      <view class="item">
        <button class="item-content" bindtap="issueRecordsClick">
          <image class="item-content-image" src="/img/wat_actli_icon.png"></image>
          <view class="item-content-state">查看发布活动记录</view>
        </button>
      </view>
      <view class="item">
        <button class="item-content" bindtap="changeRepresentClick">
          <image class="item-content-image" src="/img/cha_rep_icon.png"></image>
          <view class="item-content-state">申请代表变更</view>
        </button>
      </view>
      <view class="item">
        <button class="item-content" bindtap="createAdminClick">
          <image class="item-content-image" src="/img/cre_admin_icon.png"></image>
          <view class="item-content-state">授权管理员</view>
        </button>
      </view>
    </view>
  </view>
  <view class="main-title">
    <text class="title-text">
      身份设置
    </text>
  </view>
  <view class="main-list" >
    <view class="list-item">
      <picker bindchange="bindPickerChange" range="{{identity}}" disabled="{{disabled}}">
        <view class="item">
          <button class="item-content" bindtap="identityClick">
            <image class="item-content-image" src="/img/rep_user_icon.png"></image>
            <view class="item-content-state">切换身份</view>  
          </button>
        </view>
      </picker>
      <view class="item">
        <button class="item-content" bindtap="logoutClick">
          <image class="item-content-image" src="/img/rep_out_icon.png"></image>
          <view class="item-content-state">注销</view>
        </button>
      </view>
    </view>
  </view>
</view>